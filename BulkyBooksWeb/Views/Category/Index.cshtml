@model IEnumerable<Category>;
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row pt-5">
        <div class="col-6">
            <h3 class="text-primary">Category List</h3>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-outline-primary "><i class="bi bi-plus-circle-fill"></i> Add Category</a>
        </div>
    </div>
        <table class="table table-hover">
            <thead>
                <tr class="table-primary">
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model){
                <tr class="table-active">
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td class="text-end">
                        <div class="btn-group" role="group">
                            <a class="btn text-primary"><i class="bi bi-pencil-square"></i> Edit</a>
                            <a class="btn text-danger"><i class="bi bi-trash-fill"></i> Delete</a>
                        </div>
                    </td>
                </tr>
                }
                
            </tbody>
        </table>
</div>
