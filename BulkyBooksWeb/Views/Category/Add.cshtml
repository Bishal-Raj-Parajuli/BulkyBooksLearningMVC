@model Category
@{
    ViewData["Title"] = "Add";
}

<div class="container">
    <div class="mt-5 mb-2 pt-3">
        <h3 class="text-primary">Add Category</h3>
    </div>
    <form method="post">
        <div class="form-group">
            <div class="form-group my-2">
                <label class="form-label" asp-for="Name"></label>
                <input class="form-control" asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label class="form-label" asp-for="DisplayOrder"></label>
                <input class="form-control" asp-for="DisplayOrder" />
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <button action="submit" class="btn btn-primary">Create</button>
                <a class="btn btn-primary" asp-controller="Category" asp-action="Index"><i class="bi bi-backspace"></i> Back to list</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}


